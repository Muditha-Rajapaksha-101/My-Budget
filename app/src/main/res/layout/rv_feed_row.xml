<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtRvRowDescription"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="Salary Received"
        android:textColor="#9575CD"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137" />

    <TextView
        android:id="@+id/txtRvRowAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="252"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtRvRowDescription"
        app:layout_constraintEnd_toStartOf="@+id/txtRvCurrency"
        app:layout_constraintTop_toTopOf="@+id/txtRvRowDescription" />

    <TextView
        android:id="@+id/txtRvRowDate"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="Date"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtRvRowCategory"
        app:layout_constraintTop_toBottomOf="@+id/txtRvRowCategory"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtRvRowCategory"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="Cetegory"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/txtRvRowDescription"
        app:layout_constraintTop_toBottomOf="@+id/txtRvRowDescription" />

    <TextView
        android:id="@+id/txtRvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="LKR"
        app:layout_constraintBottom_toBottomOf="@+id/txtRvRowAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRvRowAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>